<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp">

                    <Button
                        android:id="@+id/p7button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/buttonshape"
                        android:scaleX="0.9"
                        android:text="개수"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/p7button4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/buttonshape"
                        android:scaleX="0.9"
                        android:text="칼로리"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/p7button5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/buttonshape"
                        android:scaleX="0.9"
                        android:text="시간"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="3dp">

                    <Button
                        android:id="@+id/p7button6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:background="@drawable/buttonshape"
                        android:scaleX="0.9"
                        android:text="@string/left"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/p7textview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.18"
                        android:background="@drawable/buttonshape"
                        android:gravity="center"
                        android:scaleX="0.95"
                        android:text="년-월"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/p7button8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:background="@drawable/buttonshape"
                        android:scaleX="0.9"
                        android:text="@string/right"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/p7spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.7"
                android:background="@color/few"
                app:ms_text_color="@color/white"
                android:scaleX="1"
                android:scaleY="0.8" />

        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/p7linechart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white"

            android:scaleX="0.85"
            android:scaleY="0.95" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>